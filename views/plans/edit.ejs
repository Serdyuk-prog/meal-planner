<div class="card col-6">
    <div class="card-body">
        <h4 class="card-title">Edit plan</h4>
        <form class="mb-3 validated-form" action="/plans/<%=plan._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input
                    type="text"
                    id="title"
                    name="plan[title]"
                    class="form-control mb-3"
                    value="<%=plan.title %>"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Edit</button>
        </form>
    </div>
</div>
<div class="mt-3">
    <a href="/plans/<%=plan._id%>">&#8592; Back To Plan</a>
</div>
